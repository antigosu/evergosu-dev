{
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-config-airbnb",
    "tslint-config-prettier"
  ],
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": [
      true,
      {
        "semi": true,
        "tabWidth": 2,
        "endOfLine": "lf",
        "singleQuote": true,
        "trailingComma": "es5"
      }
    ]
  }
}